<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
      <groupId>org.opendaylight.odlparent</groupId>
      <artifactId>odlparent-lite</artifactId>
      <version>3.1.3</version>
      <relativePath/>
    </parent>

    <groupId>org.opendaylight.infrautils</groupId>
    <artifactId>infrautils-artifacts</artifactId>
    <version>1.4.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <!-- <name> formatting is used by autorelease to parse and notify projects on
         build failure. Please do not modify this unless you have a good reason. -->
    <name>ODL :: infrautils :: ${project.artifactId}</name>

    <dependencyManagement>
        <dependencies>
            <!-- APIs & runtime utilities -->
            <dependency>
              <groupId>${project.groupId}</groupId>
             <artifactId>caches-api</artifactId>
              <version>${project.version}</version>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>diagstatus-api</artifactId>
              <version>${project.version}</version>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>infrautils-util</artifactId>
              <version>${project.version}</version>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>inject</artifactId>
              <version>${project.version}</version>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>jobcoordinator-api</artifactId>
              <version>${project.version}</version>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>metrics-api</artifactId>
              <version>${project.version}</version>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>ready-api</artifactId>
              <version>${project.version}</version>
            </dependency>

            <!-- Implementations, should not be used as dependencies in normal ODL OSGi bundles (because provided by Karaf), but used e.g. by simple distribution -->
            <dependency>
              <groupId>org.opendaylight.infrautils</groupId>
              <artifactId>caches-standard-impl</artifactId>
              <version>${project.version}</version>
            </dependency>

            <!-- Test utilities -->
            <dependency>
              <groupId>org.opendaylight.infrautils</groupId>
              <artifactId>infrautils-testutils</artifactId>
              <version>${project.version}</version>
