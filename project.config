[access]
	inheritFrom = All-Projects
[project]
	description = Infrastrucure Utilities Project
[access "refs/*"]
	owner = group ldap/odl-gerrit-infrautils-committers
	read = group GitHub Replication
[access "refs/heads/*"]
	label-Verified = -1..+1 group ldap/ci-infrautils
[submit]
	action = rebase if necessary
	mergeContent = false
[allowSuperproject "docs"]
	matching = refs/heads/stable/nitrogen:refs/heads/stable/nitrogen
[allowSuperproject "releng/autorelease"]
	matching = refs/heads/stable/nitrogen:refs/heads/stable/nitrogen
