<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.2.0">

  <cm:cm-properties id="initialProperties" persistent-id="org.opendaylight.infrautils.metrics"/>

  <bean id="configuration" class="org.opendaylight.infrautils.metrics.internal.Configuration">
    <cm:managed-properties persistent-id="org.opendaylight.infrautils.metrics" update-strategy="component-managed" update-method="updateProperties" />
    <argument ref="metricProviderImpl" /> <!-- This <bean> is generated by the @Singleton annotation on MetricProviderImpl -->
    <argument ref="initialProperties" />
  </bean>
</blueprint>
