<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.2.0">

  <cm:property-placeholder persistent-id="org.opendaylight.infrautils.ready" update-strategy="none">
    <cm:default-properties>
      <cm:property name="system-ready-timeout" value="5"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="bundleService" interface="org.apache.karaf.bundle.core.BundleService"/>

  <bean id="systemReady" class="org.opendaylight.infrautils.ready.karaf.internal.KarafSystemReady" init-method="init"
    destroy-method="stop">
    <argument ref="blueprintBundleContext" />
    <argument ref="bundleService" />
    <argument value="${system-ready-timeout}"/>
  </bean>

  <service ref="systemReady" interface="org.opendaylight.infrautils.ready.SystemReadyMonitor"/>
</blueprint>
